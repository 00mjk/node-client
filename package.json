{
  "name": "neovim",
  "description": "Neovim client API and neovim remote plugin provider",
  "version": "3.1.0",
  "homepage": "https://github.com/billyvg/node-client",
  "authors": [
    {
      "name": "Billy Vong",
      "email": "github@mmo.me"
    },
